{{- if (eq .chezmoi.os "darwin") -}}
#!/bin/bash

set -eufo pipefail

taps=(
	omair-inam/tap
)

# Some casks must be removed prior to be reinstalled
casks_to_remove=(
	chatgpt
)

formulae=(
	act
	age
	bat
	docker
	eza
	ffmpeg
	fzf
	gh
	jq
	mas
	nvm
	pipx
	pyenv
 	tealdeer
	tree
	wget
	yarn
	zsh-syntax-highlighting
	zoxide
)
casks=(
	1password
	battery
	beyond-compare-4
	chatgpt
	cleanshot
	clickup
	cursor
	craft
	forklift3
	google-cloud-sdk
	intellij-idea
	iterm2
	logi-options+
	meetingbar
	microsoft-remote-desktop
	onedrive
	orbstack
	pycharm
#	qbserve
	raycast
	rectangle-pro
	slack
	tower
	via
	visual-studio-code
	zoom
)

{{ if .personal_device}}
	casks+=(
		discord
		insomnia2023
		signal
		steam
    	whatsapp
	)	
{{ end }}

{{ if .work_device }}
	formulae+=(
		docker
		go
		mitmproxy
		rancher
		TomAnthony/brews/itermocil
		x3270
	)
	casks+=(
		hex-fiend
		p4v
		postman
		stats
	)
{{ end }}

# Install tapsss
for tap in "${taps[@]}"; do
    brew tap "$tap"
done

brew update

brew uninstall --cask ${casks_to_remove[@]} || true
brew install ${formulae[@]}
brew install --cask ${casks[@]}

brew bundle --no-lock --file=/dev/stdin << Brewfile
mas "Yubico Authenticator", id: 1497506650
mas "Things 3", id: 904280696
Brewfile

brew cleanup
{{ end }}