#!/usr/bin/env bash

set -euo pipefail

# Check if we're in a git repository
if ! git rev-parse --git-dir > /dev/null 2>&1; then
    echo "Error: Not a git repository" >&2
    exit 1
fi

# Check if intellij remote already exists
if git remote | grep -q "^intellij$"; then
    echo "IntelliJ remote already exists. Skipping."
    exit 0
fi

# Get origin remote URL
origin_url=$(git remote get-url origin 2>/dev/null || true)

if [[ -z "$origin_url" ]]; then
    echo "Error: No origin remote found" >&2
    exit 1
fi

# Parse URL - expecting format: omairvalence:OWNER/REPO.git
if [[ "$origin_url" =~ ^[^:]+:([^/]+)/(.+)\.git$ ]]; then
    owner="${BASH_REMATCH[1]}"
    repo="${BASH_REMATCH[2]}"
else
    echo "Error: Origin URL format not recognized: $origin_url" >&2
    echo "Expected format: username:OWNER/REPO.git" >&2
    exit 1
fi

# Construct GitHub HTTPS URL
github_url="https://github.com/${owner}/${repo}.git"

# Add intellij remote
git remote add intellij "$github_url"

# Disable push for intellij remote
git remote set-url --push intellij no_push

echo "âœ“ Added intellij remote:"
echo "  fetch: $github_url"
echo "  push:  DISABLED"
